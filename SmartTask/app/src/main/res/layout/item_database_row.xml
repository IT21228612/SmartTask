<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/database_row_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:id="@+id/database_row_header_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/database_table_cell_border"
                android:padding="12dp"
                android:text="@string/database_property_name"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/database_row_header_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/database_table_cell_border"
                android:padding="12dp"
                android:text="@string/database_property_value"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</LinearLayout>
